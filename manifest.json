
{
  "manifest_version": 3,
  "name": "Link Saver",
  "version": "1.0",
  "description": "Save and sync folders + links with Chrome bookmarks",
  "action": {
    "default_popup": "index.html",
    "default_title": "Link Saver"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "tabs"
  ],
  "host_permissions": [],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
