{
  "manifest_version": 3,
  "name": "Link Saver",
  "version": "2.0.2",
  "description": "A powerful link manager with folder organization",
  "permissions": ["tabs", "activeTab", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Link Saver"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "author": "Andy Dev",
  "homepage_url": "https://github.com/Andy-dev-hack/Link-saver-extension"
}
